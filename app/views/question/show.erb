<div class="container question-container">

  <div class="wrap-vote-button">
    <form id="question-upvote" action="/questions/<%= @question.id %>/votes" method="post">
      <input type="hidden" name="vote_count" value="1" />
      <input class="vote-button arrow-up" type="submit" value="Vote Up">
    </form>

    <div id="vote-count"><%=@question.vote_count%></div>

    <form id="question-downvote" action="/questions/<%= @question.id %>/votes" method="post">
      <input type="hidden" name="vote_count" value="-1" />
      <input class="vote-button arrow-down" type="submit" value="Vote Down">
    </form>
  </div>
  <h2 class="show-question-title"><%= @question.title %></h2>

  <p class="question-content"><%= @question.content %></p>

  <div id="ajax-answer">
    <form id="new-answer-button" action="/questions/<%= @question.id %>/answers/new" method="get">
      <button id="<%= @question.id %>" type="submit" class="btn btn-lg btn-block btn-success">New Answer</button>
    </form>
    
    </div>
      <%= erb :"partials/_answer_show" %>
    <div>
    
  </div>
</div>
