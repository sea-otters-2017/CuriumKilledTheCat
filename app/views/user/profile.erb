              <% if @user.best_answers.count > 0 %>
                <p>this user has submitted the best answer on the following questions</p>
                <% @user.best_answers.each do |answer| %>
                  <% question = answer.question %>

                  <p> <a href='/questions/<%=question.id%>'><%= answer.question.title %></a> </p>
                <% end %>
              <% end %>
            </div>

          </div><!-- end tab-pane -->

          <div class="tab-pane" id="tab2">
            <h4>Submitted Questions</h4>

            <% questions = @user.questions %>
            <% if questions.empty? %>
              <h2>You have not submitted any questions</h2>
            <% else %>
              <% questions.each do |question| %>
                <h2 class="index-question-title"><a href="/questions/<%= question.id %>"><%= h question.title %></a></h2>
              <% end %>
            <% end %>

