<% score = @user.vote_total %>
<% status = user_status(score) %>

<div class="container">
  <h1>This is the profile for <%= @user.username %></h1>

  <div class="row" id="moreInfo">
    <div class="col-sm-12">
      <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#tab1" data-toggle="tab">Stats</a></li>
          <li><a href="#tab2" data-toggle="tab">Submitted Questions</a></li>
          <li><a href="#tab3" data-toggle="tab">About Me</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="tab1">
            <h4> This user's status is <i><%= status %></i></h4>

            <div style='margin: 50px'> This user has a Pile Excess Score of <%= score %>
