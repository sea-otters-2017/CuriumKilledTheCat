<div class="popup-registration-form">
  REGISTER
<form class="form-horizontal" action='/user' method='POST'>
	<div class="form-group">
		<label class="col-lg-2 control-label" for="register_username">Username</label>
		<div class="col-lg-10">
	  	<input class="form-control" id="register_username" name="user[username]" type="text" placeholder="Username" value="<%= @user.try(:username) %>">
  	</div>
  </div>

  <div class="form-group">
  <label class="col-lg-2 control-label" for="register_password">Password</label>
  <div class="col-lg-10">
	  <input class="form-control" id="register_password" name="user[password]" type="password" placeholder="Password">
	  <button class="btn btn-success login-button" id="new_user_submit" type="submit">Submit</button>
    <button class="btn btn-success cancel-button" id="new_user_cancel">Cancel</button>
	  </div>
  </div>
</form>
</div>
