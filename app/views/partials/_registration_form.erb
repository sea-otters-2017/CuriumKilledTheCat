<div class="popup-registration-form popup-form">
  <h2 class='popup-header'>Register</h2>
  <button class="cancel-button" id="new_user_cancel">&#9447;</button>
  <div id='popup-flash'></div>
<form id='popup-register-form' class="form-horizontal" action='/user' method='POST'>
  <div class='responses'>
  	<div class="form-group">
    	<input class="form-control" id="register_username" name="user[username]" type="text" placeholder="Username" value="<%= @user.try(:username) %>">
    </div>
    <div class="form-group">
  	  <input class="form-control" id="register_password" name="user[password]" type="password" placeholder="Password">
    </div>
  </div>
  <div class='form-buttons text-center'>
	  <button class="btn login-button" id="new_user_submit" type="submit">Submit</button>
  </div>
</form>
</div>
